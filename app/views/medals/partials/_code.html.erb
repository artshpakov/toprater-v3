<script>
  (function() {
    var script = document.createElement('script');
    script.type = 'text/javascript';
    script.src = 'http://toprater.com/widget.js';
    script.async = true;
    script.onload = function() {
      TopRater.fetchWidget(<%= params[:id] %>, { criteria: <%= State.criteria.to_json %>, filters: <%= State.filters.to_json %>}, '<%= hash %>');
    };
    document.getElementsByTagName('head')[0].appendChild(script);
  })();
</script>
<div id="toprater-award-placeholder-<%= hash %>"></div>
