- @spheres.each do |sphere|
  - if sphere['issphere'] == false
    a href="javascript:;" data-dropdown="drop-#{ sphere['name'] }" aria-controls="drop-#{ sphere['name'] }" aria-expanded="false"
      = sphere['label']
      | &nbsp;&#x25BE;
    ul.subspheres.f-dropdown id="drop-#{ sphere['name'] }" data-dropdown-content=true aria-hidden="true" tabindex="-1"
      - sphere['categories'].each do |subsphere|
        li: a href="#{ root_path sphere: subsphere['name'] }" = subsphere['label']

  - else
    a href="#{ root_path sphere: sphere['name'] }" = sphere['label']
